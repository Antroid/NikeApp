<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?attr/selectableItemBackground"
    android:clickable="true"
    android:paddingTop="5dp"
    android:paddingBottom="5dp"
    android:focusable="true">

    <TextView
        android:id="@+id/definition"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="10dp"
        android:padding="5dp"
        android:text="@string/definition"
        android:textColor="@android:color/black"
        android:textSize="16sp"
        app:layout_constraintEnd_toStartOf="@id/thumbs_up"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/thumbs_up"
        android:layout_width="60dp"
        android:layout_height="match_parent"
        android:layout_marginEnd="10dp"
        android:paddingTop="5dp"
        android:gravity="center"
        android:paddingBottom="5dp"
        android:textColor="@android:color/black"
        app:layout_constraintBottom_toBottomOf="@id/definition"
        app:layout_constraintEnd_toStartOf="@id/thumbs_down"
        app:layout_constraintTop_toTopOf="@id/definition" />


    <TextView
        android:id="@+id/thumbs_down"
        android:layout_width="60dp"
        android:gravity="center"
        android:layout_height="match_parent"
        android:layout_marginEnd="10dp"
        android:drawablePadding="5dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:textColor="@android:color/black"
        app:layout_constraintBottom_toBottomOf="@id/definition"
        app:layout_constraintDimensionRatio="W,1:1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/definition" />


</androidx.constraintlayout.widget.ConstraintLayout>